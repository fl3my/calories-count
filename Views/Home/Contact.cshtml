@model CaloriesCount.Models.Message

@{
    ViewBag.Title = "Contact us";
}
<h2>@ViewBag.Title</h2>

<div id="contact">
    <div class="well text-center">
        <p>Contact us and we will get back to you within 24 hours.</p>
        <p><span class="glyphicon glyphicon-map-marker"></span> Glasgow, Scotland</p>
        <p><span class="glyphicon glyphicon-phone"></span> 1234567890</p>
        <p><span class="glyphicon glyphicon-envelope"></span> contactus@CaloriesCount.com</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-xs-6 col-sm-6 form-group">
                @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name", @style = "max-width:100%;" })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-6 col-sm-6 form-group">
                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @id = "name", @style = "max-width:100%;" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-12 form-group">
                @Html.TextAreaFor(model => model.Comment, new { @placeholder = "Enter your comment here", @class = "form-control", @id = "name", @style="max-width:100%;" })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                <br />
            </div>
        </div>
        <input type="submit" value="Send Message" class="btn btn-success" />
    }


</div>
</div>
