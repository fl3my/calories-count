@model CaloriesCount.ViewModels.FoodIndexViewModel
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @(String.IsNullOrWhiteSpace(Model.Search) ? "Showing all" : "You search for " + Model.Search + " found") @Model.Foods.TotalItemCount foods
</p>
<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginRouteForm("FoodsIndex", "FormMethod.Get"))
    {
        <label>Filter by category:</label>
        @Html.DropDownListFor(vm => vm.Category, Model.CategoryFilterItems, "All");
        <label>Sort By:</label>
        @Html.DropDownListFor(vm => vm.SortBy, new SelectList(Model.Sorts, "Value","Key"), "Default");
        <input type="submit" value="Filter" />
        <input type="hidden" name="Search" id="Search" value="@Model.Search" />
    }
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Calories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Fat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Protein)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Carbohydrates)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foods.First().Fibre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Foods) {
    <tr>
        <td>
            <img src="@(Url.Content(Constants.FoodThumbnailPath) + item.ImageFileName)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calories)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Protein)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carbohydrates)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fibre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<div>
    Page @(Model.Foods.PageCount < Model.Foods.PageNumber ? 0 : Model.Foods.PageNumber) of @Model.Foods.PageCount
    @Html.PagedListPager(Model.Foods, page => Url.Action("Index", new {category = Model.Category, Search = Model.Search, sortBy = Model.SortBy, page}))
</div>
